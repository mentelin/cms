div(data-ng-include="'components/navbar/navbar.html'")

.container
    h1.page-header Plugin

    form.well(data-ng-show="isAdmin()")
        .form-group
            label Name

            input.form-control(type="text", placeholder="Name", data-ng-model="newPlugin.name")

        .form-group
            label Page id

            select.form-control(data-ng-model="newPlugin.idPage")
                option(value="{{ page._id }}", data-ng-repeat="page in pages") {{ page.title }}

        .form-group
            label Plugin order

            input.form-control(type="nubmer", placeholder="Plugin order", data-ng-model="newPlugin.order")

        button.btn.btn-primary(type="submit", data-ng-click="addPlugin()") Add New

    ul.list-group
        li.list-group-item(data-ng-repeat="plugin in plugins | orderBy:predicate")
            span {{ plugin.order }}.&ensp;

            button.close(type="button", data-ng-show="isAdmin()", data-ng-click="deletePlugin(plugin)") Ã—

            a(data-ng-href="/plugins/{{ plugin._id }}", title="{{ plugin.name }}") {{ plugin.name }}

            p {{ plugin.idPage }}
