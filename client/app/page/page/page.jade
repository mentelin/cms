div(data-ng-include="'components/navbar/navbar.html'")

.container
    div(data-plugin, type="description")

    div(data-plugin, type="form")

    ul.list-group
        li.list-group-item(data-ng-repeat="plugin in plugins | orderBy:predicate")
            span {{ plugin.order }}.&ensp;

            button.close(type="button", data-ng-show="isAdmin()", data-ng-click="deletePlugin(plugin)") ×

            a(data-ng-href="/plugins/{{ plugin._id }}", title="{{ plugin.name }}") {{ plugin.name }}

            p {{ plugin.idPage }}

    ul.list-group
        li.list-group-item(data-ng-repeat="page in childs")
            button.close(type="button", data-ng-show="isAdmin()", data-ng-click="deletePage(page)") ×

            span {{ $index + 1 }}.&ensp;

            a(data-ng-href="{{ getURL(page.parent, page.link) }}", title="{{ page.title }}")
                span(data-ng-show="page.parent") /{{ getLink(page.parent) }}
                | /{{ page.link }}
